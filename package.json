{
  "scripts": {
    "format:fix": "dotnet format realworld-dotnet.csproj",
    "format:check": "dotnet format realworld-dotnet.csproj --verify-no-changes",
    "build": "npm run format:check && dotnet build",
    "prestart:only": "rm -rf coverage* && dotnet tool restore",
    "start:only": "dotnet tool run dotnet-coverage collect -o coverage.xml -f cobertura -if 'bin/Debug/net8.0/realworld-dotnet.dll' -- dotnet run --no-build",
    "start": "npm run build && npm run start:only",
    "test:only": "newman run api-tests.postman_collection.json --delay-request 500 --bail",
    "stop": "kill-port 3000",
    "test": "./start-and-test.sh",
    "coverage-report": "dotnet reportgenerator -reports:coverage.xml -targetdir:coveragereport -sourcedirs:src -assemblyfilters:'-Serilog.*' -classfilters:'-*.migrations.*' -reporttypes:'HtmlInline;JsonSummary;lcov;TextSummary' && cat coveragereport/Summary.txt",
    "check-coverage": "node ./check-coverage.js"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "@xmldom/xmldom": "^0.8.11",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "axios": "^1.13.2",
    "kill-port-process": "^3.2.1",
    "mocha": "^11.7.5",
    "newman": "^6.2.1",
    "wait-port": "^1.1.0",
    "xpath": "^0.0.34"
  },
  "type": "module"
}
